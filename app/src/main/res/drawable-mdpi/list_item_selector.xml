<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Add the primary light color to three items for: pressed, activated, and selected states -->
    <item android:drawable="@color/colorItemPressed" android:state_pressed="true" />
    <item android:drawable="@color/colorItemPressed" android:state_activated="true" />
    <item android:drawable="@color/colorItemSelected" android:state_selected="true" />

    <!-- Add one more item for the default (unselected) state -->
    <item android:drawable="@android:color/transparent" />

</selector>